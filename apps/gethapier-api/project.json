{
  "root": "apps/gethapier-api",
  "sourceRoot": "apps/gethapier-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx nx run gethapier-api:build-base",
        "color": true
      }
    },
    "build-base": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [{
        "target": "build",
        "projects": "dependencies"
      }],
      "options": {
        "outputPath": "dist/apps/gethapier-api",
        "main": "apps/gethapier-api/src/main.ts",
        "tsConfig": "apps/gethapier-api/tsconfig.app.json",
        "assets": ["apps/gethapier-api/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [{
            "replace": "apps/gethapier-api/src/environments/environment.ts",
            "with": "apps/gethapier-api/src/environments/environment.prod.ts"
          }]
        }
      }
    },
    "run-emulators": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "firebase emulators:start"
      }
    },
    "serve-api": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "gethapier-api:build"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [{
            "command": "npx nx build gethapier-api --watch"
          },
          {
            "command": "npx nx run gethapier-api:run-emulators"
          }
        ],
        "parallel": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/gethapier-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/gethapier-api", "./.reports/jest/gethapier-api.junit.xml"],
      "options": {
        "jestConfig": "apps/gethapier-api/jest.config.js",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [{
        "target": "build",
        "projects": "self"
      }],
      "options": {
        "command": "firebase deploy --only functions"
      }
    },
    "ci-deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [{
        "target": "build",
        "projects": "self"
      }],
      "options": {
        "command": "firebase deploy --only functions --token \"$FIREBASE_TOKEN\""
      }
    }
  }
}
