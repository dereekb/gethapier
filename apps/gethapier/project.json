{
  "projectType": "application",
  "root": "apps/gethapier",
  "sourceRoot": "apps/gethapier/src",
  "prefix": "gethapier",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx nx run gethapier:build-base",
        "color": true
      }
    },
    "build-base": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/gethapier",
        "index": "apps/gethapier/src/index.html",
        "main": "apps/gethapier/src/main.ts",
        "polyfills": "apps/gethapier/src/polyfills.ts",
        "tsConfig": "apps/gethapier/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/gethapier/src/favicon.ico",
          "apps/gethapier/src/assets",
          "apps/gethapier/src/lib"
        ],
        "styles": ["apps/gethapier/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [{
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [{
            "replace": "apps/gethapier/src/environments/environment.ts",
            "with": "apps/gethapier/src/environments/environment.prod.ts"
          }],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "gethapier:build-base:production",
          "port": 9810
        },
        "development": {
          "browserTarget": "gethapier:build-base:development",
          "port": 9810
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "gethapier:build-base"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/gethapier/src/**/*.ts",
          "apps/gethapier/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/gethapier", "./.reports/jest/gethapier.junit.xml"],
      "options": {
        "jestConfig": "apps/gethapier/jest.config.js",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [{
        "target": "build",
        "projects": "self"
      }],
      "options": {
        "command": "firebase deploy --only hosting"
      }
    },
    "ci-deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [{
        "target": "build",
        "projects": "self"
      }],
      "options": {
        "command": "firebase deploy --only hosting --token \"$FIREBASE_TOKEN\""
      }
    }
  },
  "tags": []
}
